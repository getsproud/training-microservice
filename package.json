{
  "name": "@sproud/service-training",
  "version": "0.4.4",
  "description": "training microservice for sproud.io",
  "main": "main.js",
  "author": "Dominic Rico GÃ³mez <rico@sproud.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/getsproud/sproud.git"
  },
  "scripts": {
    "release": "CI=true HUSKY_SKIP_HOOKS=1 GITHUB_TOKEN=$(grep GITHUB_TOKEN .env | cut -d '=' -f2) semantic-release  --no-ci",
    "build": "babel src -d dist --copy-files --delete-dir-on-start",
    "clean": "node -e 'require(\"rimraf\")(\"./dist\", () => {})'",
    "start": "node dist/main.js",
    "test": "jest ./test/*.js --runInBand",
    "lint": "eslint . -c .eslintrc --cache --cache-location ./node_modules/.cache/eslint",
    "dev": "telepresence intercept api-gateway -n sproud-stage --port 50051 -- nodemon --exec babel-node src/main.js",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "cote": "^1.0.0",
    "mongoose": "^5.10.13",
    "mongoose-paginate-v2": "^1.3.18",
    "mongoose-partial-full-search": "0.0.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/node": "^7.12.6",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@commitlint/cli": "^12.0.1",
    "@shelf/jest-mongodb": "^1.2.5",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^4.3.0",
    "jest": "^27.0.6",
    "lint-staged": "^10.5.1",
    "mongo-seeding": "^3.7.0",
    "nodemon": "^2.0.6"
  },
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      "test/*",
      "docs/*",
      "dist/*",
      "deployments/*"
    ]
  },
  "engines": {
    "node": ">= 14.15.0"
  }
}
